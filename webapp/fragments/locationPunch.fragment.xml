<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <ResponsivePopover id="myPopover" resizable="true" title="Punch Information"  placement="Auto">
       
        <content>


            <form:SimpleForm editable="false" layout="ResponsiveGridLayout"  labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <Label text="Date" design="Bold"/>
                <Text text="{punchhistorylocation>/date}"></Text>
                <Label text="Punch In Time" design="Bold"/>
                <Text text="{punchhistorylocation>/punchIn}"></Text>
                <Label text="Punch In Location" design="Bold"/>
                <Text text="{punchhistorylocation>/Inaddress}"></Text>
                <Label text="Punch Out Time" design="Bold"/>
                <Text text="{punchhistorylocation>/punchOut}"></Text>
                <Label text="Punch Out Location" design="Bold"/>
                <Text text="{punchhistorylocation>/Outaddress}"></Text>
            </form:SimpleForm>

        </content>
        
        
    </ResponsivePopover>

</core:FragmentDefinition>
