<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <ResponsivePopover id="forgetpasspopover" showArrow="true" resizable="true" title="Forget Password"  placement="Auto">
       
 
        <content>


            <form:SimpleForm editable="false" layout="ResponsiveGridLayout"  labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <Label text="Registered E-Mail" design="Bold"/>
                <Input value="{punchhistorylocation>/date}"></Input>
               
            </form:SimpleForm>

        </content>
        <beginButton>
        <Button text="Send Code" press="onSendCodeFoget" type="Ghost"></Button>
        </beginButton>
        <endButton>
        <Button text="Cancel" press="onCancelPopover" type="Reject"></Button>
        </endButton>
   
        
        
    </ResponsivePopover>

</core:FragmentDefinition>
